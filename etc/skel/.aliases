cf() { [ $# -eq 1 ] && find . | grep -c $1 ; [ $# -eq 2 ] && find $2 | grep -c $1 ; } # Count files containing a given string (extension)
du_largest_files() { if [ -z "$1" ] ; then n=10; else n=$1 ; fi && du -h -x -s -- * | sort -r -h | head -$n | lolcat; }
# decrypt
dtg() { gpg -d $1 | tar xzvf - ; }
dtx() { gpg -d $1 | tar xJvf - ; }
# encrypt
etg() { tar czvpf - $1 | gpg --symmetric --cipher-algo AES256 -o $2 ; } # myarchive.tar.gz.gpg
etx() { tar cJvpf - $1 | gpg --symmetric --cipher-algo AES256 -o $2 ; } # myarchive.tar.xz.gpg
