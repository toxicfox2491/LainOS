ols() {	# Open last screenshot
	cd $HOME/Pictures/Screenshots/
	last_scr="$(find . -type f -name \*.png -printf "%T@ %p\0" | awk 'BEGIN {RS="\0";} {if (NR==1){minmtime=$1; $1=""; lastmodified=$0;} else if (minmtime<$1){minmtime=$1; $1=""; lastmodified=$0;}} END{print substr(lastmodified,4)}')"
	echo "Opening $last_scr" | lolcat
	xdg-open $last_scr &
	cd -
}
